@page
@model Web.Pages.ReleaseManagement.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Release</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Release.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Release.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Release.Version)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Release.Version)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Release.Contributors)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Release.Contributors)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Release.Licence)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Release.Licence)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Release.CreatedUtc)
        </dt>
        <dd class="col-sm-10">
            @Html.LocalDate(Model.Release.CreatedUtc)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Release.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
