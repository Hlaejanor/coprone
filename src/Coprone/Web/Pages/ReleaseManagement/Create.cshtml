@page
@model Web.Pages.ReleaseManagement.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h4>Release</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Release.Name" class="control-label"></label>
                    <input asp-for="Release.Name" class="form-control" />
                    <span asp-validation-for="Release.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Release.Version" class="control-label"></label>
                    <input asp-for="Release.Version" class="form-control" />
                    <span asp-validation-for="Release.Version" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Release.Contributors" class="control-label"></label>
                    <input asp-for="Release.Contributors" class="form-control" />
                    <span asp-validation-for="Release.Contributors" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Release.Licence" class="control-label"></label>
                    @Html.TextAreaFor(x => x.Release.Licence, new { @class = "form-control", @rows = 10 })
                    <span asp-validation-for="Release.Licence" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div>
                    <a asp-page="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
