<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Coprone</title>
    <link href="~/css/loaders/loader-typing.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/css/theme-course.css" rel="stylesheet" type="text/css" media="all" />
    <link rel="preload" as="font" href="~/fonts/Inter-UI-upright.var.woff2" type="font/woff2" crossorigin="anonymous">
    <link rel="preload" as="font" href="~/fonts/Inter-UI.var.woff2" type="font/woff2" crossorigin="anonymous">
</head>
<body>
    <div class="loader">
        <div class="loading-animation"></div>
    </div>
    <header>
        <div class="navbar-container bg-primary-3">
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary-3" data-sticky="top">
                <div class="container">
                    <a style="width:140px" class="navbar-brand fade-page" href="/">
                        <img src="~/img/Coprone-logo.svg" alt="Coprone">
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                        <img class="icon navbar-toggler-open" src="~/img/icons/interface/menu.svg" alt="menu interface icon" data-inject-svg />
                        <img class="icon navbar-toggler-close" src="~/img/icons/interface/cross.svg" alt="cross interface icon" data-inject-svg />
                    </button>
                    <div class="collapse navbar-collapse justify-content-end">
                        <div class="py-2 py-lg-0">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/TheScience">The science</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/TheBed">The bed</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Download">Download</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Register">Privacy</a>
                                </li>
                                <partial name="_LoginPartialNoListElement" />
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    @{
        var pageName = ViewContext.RouteData.Values["page"].ToString();
        var isLandingPage = pageName == "/Index";
    }

    <div class="@(isLandingPage ? "" : "container")">
        <main role="main">
            @if (isLandingPage)
            {
                @RenderBody()
            }
            @if (!isLandingPage)
            {
                <section>
                    @RenderBody()
                </section>
            }
        </main>
    </div>

    <footer class="pb-4 bg-primary-3 text-light" id="footer">
        <div class="container">
            <div class="row mb-5">
                <div class="col">
                    <div class="card card-body border-0 o-hidden mb-0 bg-primary text-light">
                        <div class="position-relative d-flex flex-column flex-md-row justify-content-between align-items-center">
                            <div class="h3 text-center mb-md-0">To find out more</div>
                            <a class="btn btn-lg btn-white" asp-area="Identity" asp-page="Account/Register">
                                Register now
                            </a>
                        </div>
                        <div class="decoration layer-0">
                            <img class="bg-primary-2" src="~/img/decorations/deco-blob-1.svg" alt="deco-blob-1 decoration" data-inject-svg />
                        </div>
                    </div>

                </div>
            </div>
            <div class="row mb-5">
                <div class="col-6 col-lg">
                    <h5>Contact</h5>
                    <ul class="list-unstyled">
                        <li class="mb-3 d-flex">
                            <img class="icon" src="~/img/icons/theme/map/marker-1.svg" alt="marker-1 icon" data-inject-svg />
                            <div class="ml-3">
                                <span>
                                    S/Y Victoria<br />
                                    Currenly moored at Wilders Plads
                                    Copenhagen
                                </span>
                            </div>
                        </li>
                        <li class="mb-3 d-flex">
                            <img class="icon" src="~/img/icons/theme/communication/call-1.svg" alt="call-1 icon" data-inject-svg />
                            <div class="ml-3">
                                <span>+47 47 40 99 53</span>
                                <span class="d-block text-muted text-small">Mon - Fri 9am - 5pm CET</span>
                            </div>
                        </li>
                        <li class="mb-3 d-flex">
                            <img class="icon" src="~/img/icons/theme/communication/mail.svg" alt="mail icon" data-inject-svg />
                            <div class="ml-3">
                                <a href="#">hello@coprone.com</a>
                            </div>
                        </li>
                    </ul>
                </div>
